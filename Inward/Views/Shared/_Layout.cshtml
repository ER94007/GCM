<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css">

    <!-- SweetAlert CSS -->
    <link href="~/assets/dist/css/sweetalert.css" rel="stylesheet" />

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inward.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>


    <style>
        /* Custom Styles for Smaller Sidebar and Content */
        .content-wrapper {
            margin-left: 200px; /* Adjust the margin as needed */
        }

        label, input, select {
            font-size: 12px; /* Adjust the font size as needed */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">

    <!-- Top Navbar -->
    <nav class="main-header navbar navbar-expand navbar-light bg-white border-bottom">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
            </li>
        </ul>

        <!-- Right navbar -->
        <ul class="navbar-nav ml-auto">
            <li class="nav-item d-flex align-items-center">
                <span class="text-black mr-3 font-weight-bold">
                    @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(User.Identity.Name)
                </span>
                <a href="@Url.Action("Logout", "Login")" class="text-danger d-flex align-items-center">
                    <i class="fas fa-sign-out-alt mr-1"></i> Logout
                </a>
            </li>
        </ul>
    </nav>

    <!-- Sidebar -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="#" class="brand-link">
            <span class="brand-text font-weight-light">GCM</span>
        </a>

        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                    <!-- Parent Item with Submenu -->
                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Masters
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="Inward" asp-action="AddSubHead" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>SubHead</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Inward" asp-action="Index" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Student</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="FinancialYearTermWiseFee" asp-action="AddFinanceYearBalance" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Opening Balance Entry</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="FinancialYearTermWiseFee" asp-action="AddFinancialYearTermFee" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Term wise Fee Entry</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="FinancialYearTermWiseFee" asp-action="AddChequeNo" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Cheque Master</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Fees Collection
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="StudentFeeCollection" asp-action="AddStudentFeeCollection" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Auto Student Fee Collection</p>
                                </a>
                            </li>
                        </ul> 
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="StudentFeeCollection" asp-action="AddMannualStudentFeeCollection" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Mannually Student Fee Collection</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>
                                Expenses
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-controller="FinancialYearTermWiseFee" asp-action="AddExpense" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Expense Spent</p>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Report" asp-action="ParameterForm" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>Reports</p>
                        </a>
                    </li>

                </ul>
            </nav>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <!-- jQuery (only once) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Bootstrap Bundle JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

    <!-- AdminLTE JS (required for treeview) -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Global DataTables Initialization -->
    <script>
        $(document).ready(function () {
            $('.datatable').each(function () {
                if (!$.fn.DataTable.isDataTable(this)) {
                    $(this).DataTable({
                        paging: true,
                        searching: true,
                        ordering: true
                    });
                }
            });
        });
    </script>

    <!-- Initialize treeview for sidebar menu -->
    <script>
        $(document).ready(function () {
            // Initialize treeview menu
            $('.nav-treeview').treeview({
                animated: 'fast',
                collapsed: true,
                unique: true
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
