<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inward</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css">

    <!-- SweetAlert CSS -->
    <link href="~/assets/dist/css/sweetalert.css" rel="stylesheet" />

    <!-- Select2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inward.styles.css" asp-append-version="true" />

    <style>
        /* Custom Styles for Smaller Sidebar and Content */
        .content-wrapper {
            margin-left: 200px; /* Adjust the margin as needed */
        }

        label, input, select {
            font-size: 12px; /* Adjust the font size as needed */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">

    <!-- Sidebar -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="#" class="brand-link">
            <span class="brand-text font-weight-light">GCM</span>
        </a>
        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a asp-controller="Inward" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-th"></i><p>Student</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Inward" asp-action="AddSubHead" class="nav-link">
                            <i class="nav-icon fas fa-th"></i><p>SubHead</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="FinancialYearTermWiseFee" asp-action="AddFinancialYearTermFee" class="nav-link">
                            <i class="nav-icon fas fa-th"></i><p>Term wise Fee Entry</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="FinancialYearTermWiseFee" asp-action="AddFinanceYearBalance" class="nav-link">
                            <i class="nav-icon fas fa-th"></i><p>Opening Balance Entry</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="FinancialYearTermWiseFee" asp-action="AddExpense" class="nav-link">
                            <i class="nav-icon fas fa-th"></i><p>Expense Spent</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="FinancialYearTermWiseFee" asp-action="ParameterForm" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>Parameter</p>
                        </a>
                    </li><li class="nav-item">
                        <a asp-controller="Inward" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-th"></i><p>Reports</p>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <!-- jQuery (only once) -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <!-- Bootstrap Bundle JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Select2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Global DataTables Initialization -->
    <script>
        $(document).ready(function () {
            $('.datatable').each(function () {
                if (!$.fn.DataTable.isDataTable(this)) {
                    $(this).DataTable({
                        paging: true,
                        searching: true,
                        ordering: true
                    });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
