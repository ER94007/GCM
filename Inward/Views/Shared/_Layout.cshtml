<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inward</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">

    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css">

    <link href="~/assets/dist/css/sweetalert.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Inward.styles.css" asp-append-version="true" />
    <style>
        /* Custom Styles for Smaller Sidebar and Content */
        .main-sidebar {
            width: 200px; /* Adjust the width as needed */
        }

        .content-wrapper {
            margin-left: 200px; /* Adjust the margin as needed */
        }

        /* Custom Styles for Smaller Labels, Textboxes, and Dropdowns */
        label, input, select {
            font-size: 12px; /* Adjust the font size as needed */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="#" class="brand-link">
            <span class="brand-text font-weight-light">AdminLTE</span>
        </a>
        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="FinancialYearTermWiseFee" asp-action="AddFinancialYearTermFee" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p >Financial Year </p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Inward" asp-action="Index" class="nav-link">
                            <i class="nav-icon fas fa-th"></i>
                            <p>Student</p>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <div class="container-fluid">
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
