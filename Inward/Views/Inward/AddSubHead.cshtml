<script src="~/js/common.js"></script>
<script src="~/assets/dist/js/sweetalert.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@model GCM.Entity.SubHeadEntity;
@{
	ViewBag.Title = "SubHead";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var msg = TempData["SaveStatus"] as string;
	long sid = 0;
	if(Model.subheadid != 0)
	{
		sid = Model.subheadid;
	}
}
<section class="content">
	<div class="content-wrapper">
		<form method="post" action="AddSubHead">
			<input type="hidden" asp-for="subheadid" value="@sid"/>
			<div class="container-fluid">
				<div class="row mt-2">
					<div class="card card2">
						<div class="card-header">
							<h3 class="card-title">Add Subhead</h3>
						</div>
						<div class="card-body p-2">
							<div class="row">
								<div class="col-md-6">
									<div class="form-horizontal form-bordered">
										<div class="form-group row">
											<label class="control-label col-md-4">SubHead Name</label>
											<div class="col-md-8 ">
												<input type="text" asp-for="subheadname" class="form-control" />
												<span asp-validation-for="subheadname" class="text-danger"></span>
											</div>
										</div>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-horizontal form-bordered">
										<div class="form-group row">
											<label class="control-label col-md-3">SubHead Type</label>
											 
												<div class="col-md-9 ">
												<div class="row form-control">
													<span>
															<input type="radio" asp-for="subheadtype" class="form-check-input mt-2" value="Mandatory" id="mandatory">
															<label class="form-check-label" for="mandatory"><b>Mandatory</b></label>
													</span>
													<span>
														<input type="radio" asp-for="subheadtype" class="form-check-input mt-2" value="Optional" id="optional">
														<label class="form-check-label " for="optional"><b>Optional</b></label>
													</span>
													</div>
													
												</div>
											
										</div>
									</div>
								</div>
							</div>
							<div class=" text-center mt-2">
								<button type="submit" class="btn btn-success">Submit</button>
								<a href="@Url.Action("GetSubHeadList", "Inward")" class="btn btn-secondary">
									<i class="fas fa-list mr-1"></i>
									Go to List
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<script>
	$(document).ready(function () {

			var msg = '@msg';
			if (msg != null && msg != '') {
				ShowDynamicSwalAlert("", msg);
			}
		});
</script>