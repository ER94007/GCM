<script src="~/js/common.js"></script>
<script src="~/assets/dist/js/sweetalert.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@model GCM.Entity.SubHeadEntity;
@{
	ViewBag.Title = "SubHead";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var msg = TempData["SaveStatus"] as string;
	long sid = 0;
	if (Model.subheadid != 0)
	{
		sid = Model.subheadid;
	}
}
<section class="content">
	<div class="content-wrapper">
		<form method="post" action="AddSubHead">
			<input type="hidden" asp-for="subheadid" value="@sid" />
			<div class="container-fluid">
				<div class="row mb-3">
					<div class="col-md-12">

						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Add Sub Head</h3>
							</div>
							<div class="card-body p-2">
								<div class="row">
									<div class="col-md-6">
										<div class="form-horizontal form-bordered">
											<div class="form-group row">
												<label class="control-label col-md-4">SubHead Name</label>
												<div class="col-md-8 ">
													<input type="text" asp-for="subheadname" class="form-control" />
													<span asp-validation-for="subheadname" class="text-danger"></span>
												</div>
											</div>
										</div>
									</div>
									<div class="col-md-6">
										<div class="form-horizontal form-bordered">
											<div class="form-group row">
												<label class="control-label col-md-4">SubHead Type</label>
												<div class="col-md-8">
													<div class="form-control">
													<div class="form-check form-check-inline">
														<input type="radio" asp-for="subheadtype" class="form-check-input" value="Mandatory" id="mandatory">
														<label class="form-check-label" for="mandatory"><strong>Mandatory</strong></label>
													</div>
													<div class="form-check form-check-inline">
														<input type="radio" asp-for="subheadtype" class="form-check-input" value="Optional" id="optional">
														<label class="form-check-label" for="optional"><strong>Optional</strong></label>
													</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class=" text-center mt-2">
									<button type="submit" class="btn btn-success">Submit</button>
									<a href="@Url.Action("GetSubHeadList", "Inward")" class="btn btn-secondary">
										<i class="fas fa-list mr-1"></i>
										Go to List
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<script>
	$(document).ready(function () {

		var msg = '@msg';
		if (msg != null && msg != '') {
			ShowDynamicSwalAlert("", msg);
		}
	});
</script>