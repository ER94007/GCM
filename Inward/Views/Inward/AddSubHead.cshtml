
@model GCM.Entity.SubHeadEntity;
@{
	ViewBag.Title = "SubHead";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var msg = TempData["SaveStatus"] as string;
	long sid = 0;
	if (Model.subheadid != 0)
	{
		sid = Model.subheadid;
	}
}
<script src="~/js/common.js"></script>
<script src="~/assets/dist/js/sweetalert.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- Include Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<section class="content">
	<div class="content-wrapper">
		<form method="post" action="AddSubHead">
			<input type="hidden" asp-for="subheadid" value="@sid" />
			<div class="container-fluid">
				<div class="row mb-3">
					<div class="col-md-12">

						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Add Sub Head</h3>
							</div>
							<div class="card-body">
								<div class="row">
									<div class="col-md-6 mb-3">
										<div class="form-group">
											<label class="control-label">SubHead Name</label>
											<input type="text" asp-for="subheadname" class="form-control" />
											<span asp-validation-for="subheadname" class="text-danger"></span>
										</div>
									</div>
									<div class="col-md-6 mb-3">
										<div class="form-group">
											<label class="control-label">SubHead Type</label>
											<div class="form-control">
												<div class="form-check form-check-inline">
													<input type="radio" asp-for="subheadtype" class="form-check-input" value="Govt" id="mandatory">
													<label class="form-check-label" for="mandatory"><strong>Govt</strong></label>
												</div>
												<div class="form-check form-check-inline">
													<input type="radio" asp-for="subheadtype" class="form-check-input" value="Private" id="optional">
													<label class="form-check-label" for="optional"><strong>Private</strong></label>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="text-center mt-4">
									<button type="submit" class="btn btn-success px-4">Submit</button>
									<a href="@Url.Action("GetSubHeadList", "Inward")" class="btn btn-secondary px-4">
										<i class="fas fa-list mr-1"></i> Go to List
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>
<script>
	$(document).ready(function () {

		var msg = '@msg';
		if (msg != null && msg != '') {
			ShowDynamicSwalAlert("", msg);
		}
	});
</script>