@model GCM.Entity.HeadMasterEntity
@{
	ViewBag.Title = "HeadMaster";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var msg = TempData["SaveStatus"] as string;
	long sid = 0;
	if (Model.HeadMasterId != 0)
	{
		sid = Model.HeadMasterId;
	}
}

<script src="~/js/common.js"></script>
<script src="~/assets/dist/js/sweetalert.js"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include Select2 CSS and JS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<section class="content">
	<div class="content-wrapper">
		<form asp-action="AddHead" method="post">
			<input type="hidden" asp-for="HeadMasterId" value="@sid" />
			<div class="container-fluid">
				<div class="row mb-3">
					<div class="col-md-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Add Head</h3>
							</div>
							<div class="card-body">
								<div class="row">
									
									<div class="col-md-6 mb-3">
										<div class="form-group">
											<label class="control-label">Head Name</label>
											<input type="text" asp-for="HeadName" class="form-control" />
											<span asp-validation-for="HeadName" class="text-danger"></span>
										</div>
									</div>
									<div class="col-md-6 mb-3">
										<div class="form-group">
											<label class="control-label">Is Student Related?</label>

											<div class="form-check">
												<input type="checkbox" asp-for="IsStudentRelated" class="form-check-input" id="IsStudentRelated" />
											</div>
											<span asp-validation-for="IsStudentRelated" class="text-danger"></span>
										</div>
									</div>
									<div class="col-md-6 mb-3">
										<div class="form-group">
											<label class="control-label">Is Combined Head?</label>

											<div class="form-check">
												<input type="checkbox" asp-for="IsCombined" class="form-check-input" id="IsCombined" />
											</div>
											<span asp-validation-for="IsCombined" class="text-danger"></span>
										</div>
									</div>
								</div>
								<div class="text-center mt-4">
									<button type="submit" class="btn btn-success px-4">Submit</button>
									<a href="@Url.Action("GetHeadList", "HeadMaster")" class="btn btn-secondary px-4">
										<i class="fas fa-list mr-1"></i> Go to List
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</section>

@section Scripts {
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

	<script>
		$(document).ready(function () {
			var msg = '@msg';
			if (msg != null && msg != '') {
				ShowDynamicSwalAlert("", msg);
			}
		});
	</script>
}
