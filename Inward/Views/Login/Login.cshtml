@{
    Layout = null;
    ViewData["Title"] = "Login";
}
@model Inward.Entity.UserMaster

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GCM | Log in</title>
    <link href="~/assets/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/dist/css/sweetalert.css" rel="stylesheet" />
    <link href="~/assets/dist/css/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />

    <style>
        /* Add margin to body to avoid it being stuck at the top */
        body {
            margin-top: 20px; /* Adjust as needed */
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 40px; /* Adjusted margin for better spacing */
        }

        /* Input fields styling */
        .form-control {
            border-radius: 10px; /* Rounded corners */
            padding: 12px 15px; /* Adequate padding */
            font-size: 16px; /* Larger font size */
            border: 1px solid #ccc; /* Light border */
            box-shadow: none;
            transition: border-color 0.3s ease-in-out;
            position: relative;
        }

            .form-control:focus {
                border-color: #007bff; /* Focus color */
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Focus shadow effect */
            }

            .form-control::after {
                content: '';
                font-size: 20px;
                position: absolute;
                right: 15px; /* Position the emoji at the end */
                top: 50%;
                transform: translateY(-50%);
            }

        /* Username field emoji */
        #UserName.form-control::after {
            content: '🔑'; /* Key emoji */
        }

        /* Password field emoji */
        #Password.form-control::after {
            content: '🔒'; /* Lock emoji */
        }

        .text-center img {
            margin-bottom: 20px; /* Adjust space below logo */
        }

        .btn {
            background-color: #007bff; /* Blue color for the button */
            color: white;
            border-radius: 5px; /* Rounded corners */
            padding: 10px 20px; /* Adequate padding */
            font-size: 18px; /* Larger font size */
            transition: background-color 0.3s ease-in-out;
        }

            .btn:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

        /* Adding spacing to the bottom of the page */
        .card {
            padding: 20px;
        }

        /* Error message styling */
        .text-danger {
            font-size: 14px; /* Slightly smaller font size for error messages */
        }
    </style>
</head>
<body class="hold-transition login-page" >

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                
                <div class="card my-5">
                        
                    <form asp-action="Login" asp-controller="Login" >

                        <div class="text-center">
                            <img src="~/images/college_logo_coloured.png" style="width:40%!important" />
                        </div>

                        <div class="mb-3">
                            <input asp-for="UserName" type="text" class="form-control" id="UserName" placeholder="Enter your username">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div> 

                        <div class="mb-3">
                            <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Enter your Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-color px-5 mb-5 w-100">Sign In</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <script src="~/assets/plugins/jquery/jquery.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/common.js"></script>
    <script src="~/assets/dist/js/sweetalert.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            debugger;
            var msg = '@Html.Raw(@ViewBag.Message)';
            if (msg != null && msg != '') {
                ShowDynamicSwalAlert("", msg);
            }
        });

        $("#UserName").change(function () {
            $("#lblErrorMsg").text('');
        });
    </script>
</body>
</html>
