<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Include Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- Include Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
@{
	var msg = TempData["SaveStatus"] as string;
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
@model GCM.Entity.FinanceBalanceEntity;
<div class="content-wrapper">
	<!-- Main content -->
	<div class="content">
		<div class="container-fluid">
			<form method="post" asp-action="UpdateFinanceBalanceById">
				<div class="row mb-3">
					<div class="col-md-12">
						<input type="hidden" asp-for="FinancialYearBalanceId" />
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Financial Balance Information</h3>
							</div>
							<div class="card-body">

								<div class="row">
									<div class="col-md-4">
										<div class="form-group">
											<label for="FinancialYearId">Finance Year:</label>


											<select asp-for="FinancialYearId" class="form-control" data-live-search="true" asp-items="@(new SelectList(ViewBag.YearList, "Value", "Text"))">
												<option value="">---Select Year---</option>
											</select>
											<span asp-validation-for="FinancialYearId" class="text-danger"></span>

										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label for="subheadid">Subhead</label>
											<select asp-for="SubHeadId" class="form-control subhead-select" asp-items="@(new SelectList(ViewBag.SubheadList, "Value", "Text"))">
												<option value="">---Select Subhead---</option>
											</select>
										</div>
									</div>
									<div class="col-md-4">
										<div class="form-group">
											<label for="amount">Amount</label>
											<input asp-for="amount" type="number" class="form-control" placeholder="Enter Amount">
										</div>
									</div>
									
								</div>
							</div>
						</div>
					</div>
					<div class=" text-center">
						<button type="submit" class="btn btn-success">Submit</button>
						<a href="@Url.Action("GetFinanceYearBalance", "FinancialYearTermWiseFee")" class="btn btn-secondary">
							<i class="fas fa-list mr-1"></i>
							Go to List
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<script src="~/js/common.js"></script>
<script src="~/assets/dist/js/sweetalert.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
	$('.js-example-basic-multiple').select2();
	$(document).ready(function () {
		var msg = '@msg';
			if (msg != null && msg != '') {
				ShowDynamicSwalAlert("", msg);
			}
		});
</script>